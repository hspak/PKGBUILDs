# Maintainer: Hong Shick Pak  hongshick.pak@gmail.com

pkgname=simpfand
pkgver=1
pkgrel=2
pkgdesc="A simple fan control daemon for ThinkPads"
arch=('i686' 'x86_64')
url="http://github.com/hspasta/simpfand"
license=('GPLv3')
depends=()
conflicts=('simpfand-git')
makedepends=('git')
backup=('etc/conf.d/simpfand')
source=("https://github.com/downloads/hspasta/$pkgname/$pkgname-$pkgver-$pkgrel.tar.gz")
md5sums=('27892635c38d5a85fb647bcad6bf947b')
install=simpfand.install

build() {
  make -C "$pkgname-$pkgver-$pkgrel"
}

package() {
  install -D -m644 "$srcdir/simpfand-$pkgver-$pkgrel/simpfand.systemd" "$pkgdir/usr/lib/systemd/system/simpfand.service"
  
  make -C "$pkgname-$pkgver-$pkgrel" PREFIX=/usr DESTDIR="$pkgdir" install
}

# vim: ft=sh syn=sh et
